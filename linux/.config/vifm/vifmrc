" === Marks 
	mark h ~/
	mark j ~/Downloads
	mark u /run/media/

" === Commands
	" :com[mand][!] command_name action
	" The following macros can be used in a command
	" %a is replaced with the user arguments.
	" %c the current file under the cursor.
	" %C the current file under the cursor in the other directory.
	" %f the current selected file, or files.
	" %F the current selected file, or files in the other directory.
	" %b same as %f %F.
	" %d the current directory name.
	" %D the other window directory name.
	" %m run the command in a menu window

	command! df df -h %m 2> /dev/null
	command! diff vim -d %f %F
	command! zip zip -r %f.zip %f
	command! run !! ./%f
	command! make !!make %a
	command! mkcd :mkdir %a | cd %a
	command! reload :write | restart
	command! sxiv sxiv -f -r -t %d
	command! lg lazygit
	command! disks sudo gnome-disks

"Filetype associations

	" Pdf
	filextype *.pdf zathura %c %i &, apvlv %c, xpdf %c

	" Epub
	filextype *.epub zathura %c %i &

	"Markdown
	filetype *.md vim %f -p
	fileviewer *.md glow %c -s dark

	" Audio
	filetype *.wav,*.mp3,*.flac,*.m4a,*.wma,*.ape,*.ac3,*.og[agx],*.spx,*.opus
	       \ {Play using mpv}
	       \ mpv %f,
	       \ {Play using ffplay}
	       \ ffplay -autoexit %c,
	       \ {Play using sox}
	       \  play -V1 %c,
	fileviewer *.mp3 mp3info %c

	" Video
	filextype *.avi,*.mp4,*.wmv,*.3gp,*.ogv,*.mkv,*.mpg,*.mpeg,*.vob,
		 \*.fl[icv],*.m2v,*.mov,*.webm,*.ts,*.mts,*.m4v,*.qt,*.divx,*.as[fx]
		\ {Play using mpv}
		\ mpv %f,
		\ {View using ffplay}
		\ ffplay -autoexit %f,

	" Web
	filextype *.html,*.htm,*.mhtml qutebrowser

	" Object
	filetype *.o nm %f | less

	" Windows executable
	filetype *.exe
	\ {Run with wine} wine %c,

	" Man page
	filetype *.[1-8] man ./%c
	fileviewer *.[1-8] man ./%c | col -b

	" Images
	filetype *.bmp,*.jpg,*.jpeg,*.png,*.ico,*.tga
	\ {Display in sxiv} sxiv %f,
	\ {Display in icat} clear && icat %f && read -n1,
	\ {Display in chafa} chafa --clear %f && read -n1,
	\ {Display in fbi} fbi -a %f,

	filetype *.gif
	\ {Display in sxiv} sxiv -a %f,
	\ {Display in icat} clear && icat %f && read -n1,
	\ {Display in chafa} chafa --clear %f && read -n1,
	\ {Display in fbi} fbi -a %f,
	\ {Display in mpv} mpv %f,

	filetype *.bmp,*.jpg,*.jpeg,*.png,*.gif,*.ico,*.tga chafa %f
	" fileviewer *.bmp,*.jpg,*.jpeg,*.png,*.gif,*.ico,*.tga icat -w %pw %c
"	fileviewer *.bmp,*.jpg,*.jpeg,*.png,*.gif,*.ico,*.tga viu -w %pw %c

	" Keepass database
	filextype *.kdbx
		\ {Open in keepass}
		\ keepassxc %f

	" Torrent
	filetype *.torrent  aria2c %f &
	fileviewer *.torrent dumptorrent -v %c

	" Rar
	filextype *.rar
		\ {Extract with unrar}
		\ unrar x %f
	fileviewer *.rar unrar l %c

	" Java jar
	filetype *.jar
	       \ {Run java file}
               \ java -jar %f,
	       \ {Extract here}
	       \ unzip %c,
	       \ {View contents}
	       \ zip -sf %c | less,

	" FuseZipMount
	filetype *.zip,*.war,*.ear,*.oxt,*.apkg
	       \ {Extract here}
	       \ unzip %c,
	       \ {View contents}
	       \ zip -sf %c | less,
	       \ {Mount with fuse-zip}
	       \ FUSE_MOUNT|fuse-zip %SOURCE_FILE %DESTINATION_DIR,
	fileviewer *.zip,*.jar,*.war,*.ear,*.oxt zip -sf %c

	" ArchiveMount
	filetype *.tar,*.tar.bz2,*.tbz2,*.tgz,*.tar.gz,*.tar.xz,*.txz
	       \ {Mount with archivemount}
	       \ FUSE_MOUNT|archivemount %SOURCE_FILE %DESTINATION_DIR,
	fileviewer *.tgz,*.tar.gz tar -tzf %c
	fileviewer *.tar.bz2,*.tbz2 tar -tjf %c
	fileviewer *.tar.txz,*.txz xz --list %c
	fileviewer *.tar tar -tf %c

	" IsoMount
	filetype *.iso
	       \ {Mount with fuseiso}
	       \ FUSE_MOUNT|fuseiso %SOURCE_FILE %DESTINATION_DIR,

	" SshMount
	filetype *.ssh
	       \ {Mount with sshfs}
	       \ FUSE_MOUNT2|sshfs %PARAM %DESTINATION_DIR %FOREGROUND,

	" Fuse7z and 7z archives
	filetype *.7z
	       \ {Extract with 7z}
	       \ 7z x %f,
	       \ {Mount with fuse-7z}
	       \ FUSE_MOUNT|fuse-7z %SOURCE_FILE %DESTINATION_DIR,
	fileviewer *.7z 7z l %c

	" Office files
	filextype *.odt,*.doc,*.docx,*.xls,*.xlsx,*.odp,*.pptx libreoffice %f &
	fileviewer *.doc catdoc %c
	fileviewer *.docx docx2txt.pl %f -

	"NBT Files
	filextype *.nbt,*.dat,*.mcr
		\ {Edit with NBTExplorer}
		\ nbtexplorer %c,

" === Remaps 
	noremap i   :!vim %f -p<cr>
	noremap o   :!xdg-open %f<cr>
	noremap O   :file<cr>
	noremap dr  :!dragon-drag-and-drop -x -a %f<cr>
	noremap zip :!zip -r %c".zip" %f<cr>

	nnoremap slg :!lazygit<cr>
	nnoremap sdu :!ncdu<cr>
	nnoremap svi :!vim -p %f<cr> 
	nnoremap ssh :shell<cr>
	nnoremap svd :!vidir<cr>
	
	" Make
	nnoremap smm :!make<cr>
	nnoremap smi :!sudo make install<cr>
	nnoremap smu :!sudo make uninstall<cr>
	nnoremap smc :!make clean<cr>

	" Display sorting dialog
	nnoremap S :sort<cr>

	" Toggle visibility of preview window
	nnoremap w :view<cr>
	vnoremap w :view<cr>gv

	" Mappings for faster renaming
	nnoremap I cw<c-a>
	nnoremap cc cw<c-u>
	nnoremap A cw

	" Open editor to edit vifmrc and apply settings after returning to vifm
	nnoremap ,c :write | edit $MYVIFMRC | restart<cr>
